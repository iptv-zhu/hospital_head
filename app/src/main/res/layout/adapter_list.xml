<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="2.5dp"
    android:background="@drawable/doc_bg"
    android:paddingLeft="16dp"
    android:paddingTop="10dp"
    android:paddingRight="16dp"
    android:paddingBottom="10dp"
    tools:context=".mvp.view.ListActivity">

    <TextView
        android:id="@+id/bed_no"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="14px"
        android:text="12"
        android:textColor="@color/num"
        android:textSize="50px"
        android:textStyle="bold"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/name"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:text="黄文海"
        android:textColor="@color/title"
        android:textSize="30px"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/bed_no"
        app:layout_constraintLeft_toRightOf="@+id/bed_no"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/bed_no" />

    <TextView
        android:id="@+id/name_tips"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:paddingLeft="10px"
        android:text="@string/user_name"
        android:textColor="@color/btn_text"
        android:textSize="18px"
        app:layout_constraintLeft_toLeftOf="@+id/name"
        app:layout_constraintRight_toRightOf="@+id/name"
        app:layout_constraintTop_toBottomOf="@+id/name" />

    <ImageView
        android:id="@+id/doc_icon"
        android:layout_width="112px"
        android:layout_height="146px"
        android:background="@drawable/doc_1"
        app:layout_constraintLeft_toLeftOf="@+id/bed_no"
        app:layout_constraintTop_toBottomOf="@+id/name_tips"
        app:layout_constraintTop_toTopOf="@+id/nur_icon" />


    <TextView
        android:id="@+id/doc_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7px"
        android:text="医生名字"
        android:textColor="@color/title"
        android:textSize="24px"
        app:layout_constraintLeft_toLeftOf="@+id/doc_icon"
        app:layout_constraintRight_toRightOf="@+id/doc_icon"
        app:layout_constraintTop_toBottomOf="@+id/doc_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="主治医生"
        android:textColor="@color/btn_text"
        android:textSize="14px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/doc_name"
        app:layout_constraintRight_toRightOf="@+id/doc_name"
        app:layout_constraintTop_toBottomOf="@+id/doc_name" />

    <ImageView
        android:id="@+id/nur_icon"
        android:layout_width="112px"
        android:layout_height="146px"
        android:layout_marginTop="10px"
        android:src="@drawable/doc_2"
        app:layout_constraintLeft_toLeftOf="@+id/name_tips"
        app:layout_constraintTop_toBottomOf="@+id/name_tips" />

    <TextView
        android:id="@+id/nur_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="7px"
        android:paddingLeft="10px"
        android:text="护士名字"
        android:textColor="@color/title"
        android:textSize="24px"
        app:layout_constraintLeft_toLeftOf="@+id/nur_icon"
        app:layout_constraintRight_toRightOf="@+id/nur_icon"
        app:layout_constraintTop_toBottomOf="@+id/nur_icon" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="护理护士"
        android:textColor="@color/btn_text"
        android:textSize="14px"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="@+id/nur_name"
        app:layout_constraintRight_toRightOf="@+id/nur_name"
        app:layout_constraintTop_toBottomOf="@+id/nur_name" />
</android.support.constraint.ConstraintLayout>